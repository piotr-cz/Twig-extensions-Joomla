{
	"name"				: "piotr-cz/twig-extensions-joomla",
	"type"				: "library",
	"version"			: "0.4",

	"description"		: "Joomla-Framework-Language bridge",
	"keywords"			: ["i18n", "Joomla", "Language"],
	"homepage"			: "https://github.com/piotr-cz/Twig-extensions-Joomla",
	"licence"			: "GPL-2.0+",
	"authors" 			: [
		{
			"name"				: "Piotr Konieczny",
			"email"				: "hello@piotr.cz"
		}
		
	],

	"require"			: {
		"php"				: ">=5.3.0",
		"twig/twig"			: "~1.0",
		"joomla/language"	: "1.1.@stable"
	},

	"autoload"			: {
		"psr-0"				: {
			"TwigJoomla"			: "src/"
		}
	},

	"minimum-stability"	: "dev",

	"archive": {
		"exclude" : ["/tests", "/phpunit.xml.dist", "/.travis"]
	}
}
